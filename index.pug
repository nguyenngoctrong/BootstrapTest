        section.trailer
            .container
                .text-center.about__title 
                    i.fas.fa-video 
                    h3.mt-3.text-uppercase.font-weight-bold.text-white trailer 
                .pt-5.accordion#trailerAccordion 
                    button.btn.btn-dark.w-100.py-2.py-lg-4(data-toggle="collapse" data-target="#youtube1" aria-expanded="true") 
                        h3.text-uppercase.font-weight-bold trailer 1 
                    iframe( id="youtube1" class="w-100 mt-5 collapse show "  data-parent="#trailerAccordion" src="https://www.youtube.com/embed/bTqVqk7FSmY" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)  
                    button.btn.btn-dark.w-100.py-2.py-lg-4(data-toggle="collapse" data-target="#youtube2") 
                        h3.text-uppercase.font-weight-bold trailer 2
                    iframe( id="youtube2" class="w-100 mt-5 collapse" data-parent="#trailerAccordion"  src="https://www.youtube.com/embed/D4b91iPClmk" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
        section.director
            .container
                .text-center.about__title 
                    i.fas.fa-user-circle 
                    h3.mt-3.text-uppercase.font-weight-bold about the movie 
                +loadPeople(directors)
        section.bg-light.director
            .container
                .text-center.about__title 
                    i.fas.fa-users 
                    h3.mt-3.text-uppercase.font-weight-bold about the movie 
                +loadPeople(actors)
        section.logo 
            .container 
                .row 
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-1.png")
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-2.png")
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-3.png")
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-4.png")
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-5.png")
                    .col-6.col-sm-6.col-md-4.col-lg-2 
                        img(src="img/logo-6.png")
        section.release 
            .container.text-white
                .text-center.about__title 
                    i.fa.fa-calendar-alt 
                    h3.mt-3.text-uppercase.font-weight-bold.text-white release dates
                each n in Array(5)
                    .row.text-center.text-sm-center.text-lg-left.align-items-start.release__info
                        .col-12.col-sm-12.col-lg-2.release__info-date
                            h1.font-weight-bold 22
                            h2.text-uppercase june
                            h2.font-weight-bold.-small 2017
                        .col-12.col-sm-12.col-lg-6.release__info-sub 
                            h1.text-capitalize At Cinemall â€“ Walking Street, Cross City, Las Vegas, Nevada
                            h4.mt-3 Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                        .col-12.col-sm-12.col-lg-4.release__info-btn
                            button.btn.btn-outline-danger.py-3.px-5.d-block.mx-auto 
                                i.fas.fa-credit-card
                                span.text-uppercase buy ticket
        section.customer
            .container
                .text-center.about__title 
                    i.fas.fa-star 
                    h3.mt-3.text-uppercase.font-weight-bold reviews 
                +loadCustomer(customers) 
        section.icon 
            .container 
                .row.text-center 
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.far.fa-star.rounded-circle
                        h3.text-muted.mt-3 234 Awards 
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.fab.fa-imdb.rounded-circle
                        h3.text-muted.mt-3 9.2 IMDb
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.far.fa-eye.rounded-circle
                        h3.text-muted.mt-3 100M Audience
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.far.fa-comment-dots.rounded-circle
                        h3.text-muted.mt-3 300 Review
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.far.fa-money-bill-alt.rounded-circle
                        h3.text-muted.mt-3 500M Budget
                    .col-6.col-sm-6.col-md-4.col-lg-2.mt-5.icon__item
                        .icon__item-box.mx-auto
                            .icon__item-sub
                                i.fas.fa-trophy.rounded-circle
                        h3.text-muted.mt-3 Best of the Gloria
        section.bg-light.gallery 
            .container-fluid
                .text-center.about__title 
                    i.fas.fa-camera 
                    h3.mt-3.text-uppercase.font-weight-bold gallery 
                +loadGallery(gallery)
        section.blog 
            .container
                .text-center.about__title 
                    i.fas.fa-bars 
                    h3.mt-3.text-uppercase.font-weight-bold blog 
                +loadBlog(blogs)
                button.btn.btn-outline-secondary.d-block.py-3.px-5.mt-5.mx-auto
                    i.fas.fa-bars.mr-3 
                    span.text-uppercase all post
        section.contact.bg-light
            .container-fluid
                .row 
                    .col-12.col-sm-12.col-lg-6.py-5.contact__message 
                        .text-center.about__title 
                            i.fas.fa-camera 
                            h3.mt-3.text-uppercase.font-weight-bold.text-white send message 
                        .d-flex.flex-column.align-items-center.contact__input 
                            input.w-100.mt-5(type="text" placeholder="Name")
                            input.w-100.mt-5(type="text" placeholder="Email")
                            input.w-100.mt-5(type="text" placeholder="Subject")
                            textarea.w-100.mt-5(placeholder="Message")
                            button.btn.btn-outline-danger.text-uppercase.mt-5
                                h3 send message 
                    .col-12.col-sm-12.col-lg-6.py-5
                        .text-center.about__title 
                            i.fas.fa-map
                            h3.mt-3.text-uppercase.font-weight-bold send message 
                        .d-flex.flex-column.align-items-center.align-items-sm-center.align-items-md-start.mt-5.contact__info
                            h4.mt-4 
                                i.fas.fa-map-marker-alt
                                span.text-secondary Walking Street, Los Angeles, California, USA
                            h4.mt-4 
                                i.fas.fa-envelope
                                span.text-secondary themovie@gloriathemes.com 
                            h4.mt-4 
